@{
    ViewBag.Title = "门诊记录-添加";
}
<div class="row" ng-controller="PackageController">
    <div class="col-md-12">
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs font-green-sharp"></i>
                    <span class="caption-subject font-green-sharp bold uppercase">@ViewBag.Title</span>
                </div>
            </div>
            <div class="portlet-body form">
                @using (Html.BeginForm("Add", "OutpatientCases", FormMethod.Post, new { @class = "form-horizontal", @role = "form", enctype = "multipart/form-data" }))
                {
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-3 control-label">姓名</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" placeholder="姓名" name="name" value="" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">性别</label>
                            <div class="col-md-4">
                                <label class="radio-inline">
                                    <input type="radio" value="0" name="Sex" checked />男
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" value="1" name="Sex" />女
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">年龄</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" placeholder="年龄" name="age" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">联系电话</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" placeholder="联系电话" name="phone" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">联系地址</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="联系地址" name="address" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">主诉</label>
                            <div class="col-md-8">
                                <textarea class="form-control" placeholder="主诉" name="Complaint" rows="5"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">病史</label>
                            <div class="col-md-8">
                                <textarea class="form-control" placeholder="病史" name="MedicalHistory" rows="5"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">牙位上 左</label>
                            <div class="col-md-9">
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="8" name="TeethUpLeft" />8
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="7" name="TeethUpLeft" />7
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="6" name="TeethUpLeft" />6
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="5" name="TeethUpLeft" />5
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="5" name="TeethUpLeft" />4
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="3" name="TeethUpLeft" />3
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="2" name="TeethUpLeft" />2
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="1" name="TeethUpLeft" />1
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">牙位上 右</label>
                            <div class="col-md-9" style="border-top: 1px solid #e5e5e5;">
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="1" name="TeethUpRight" />1
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="2" name="TeethUpRight" />2
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="3" name="TeethUpRight" />3
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="4" name="TeethUpRight" />4
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="5" name="TeethUpRight" />5
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="6" name="TeethUpRight" />6
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="7" name="TeethUpRight" />7
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="8" name="TeethUpRight" />8
                                </label>
                            </div>
                        </div>
                        <div class="form-group" >
                            <label class="col-md-3 control-label">牙位下 左</label>
                            <div class="col-md-9" style="border-top: 1px solid #e5e5e5;">
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="8" name="TeethDownLeft" />8
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="7" name="TeethDownLeft" />7
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="6" name="TeethDownLeft" />6
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="5" name="TeethDownLeft" />5
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="5" name="TeethDownLeft" />4
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="3" name="TeethDownLeft" />3
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="2" name="TeethDownLeft" />2
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="1" name="TeethDownLeft" />1
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">牙位下 右</label>
                            <div class="col-md-9" style="border-top: 1px solid #e5e5e5;">
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="1" name="TeethDownRight" />1
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="2" name="TeethDownRight" />2
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="3" name="TeethDownRight" />3
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="4" name="TeethDownRight" />4
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="5" name="TeethDownRight" />5
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="6" name="TeethDownRight" />6
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="7" name="TeethDownRight" />7
                                </label>
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="8" name="TeethDownRight" />8
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">查体</label>
                            <div class="col-md-6">
                                <textarea class="form-control" placeholder="查体" name="Checkup" rows="5"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">治疗</label>
                            <div class="col-md-6">
                                <textarea class="form-control" placeholder="治疗" name="Treatment" rows="5"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">材料</label>
                            <div class="col-md-4">
                                @Html.DropDownList("MaterialCategory", (IEnumerable<SelectListItem>)ViewBag.MaterialCategory, "--材料--", new { tabindex = "1", @class = "select2_category form-control", @id = "MaterialCategory" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">费用</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" placeholder="费用" name="Cost" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">带入</label>
                            <div class="col-md-4">
                                <label class="radio-inline">
                                    <input type="radio" value="0" name="IsWear"  />是
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" value="1" name="IsWear" checked />否
                                </label>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <button type="submit" class="btn green">保 存</button>
                                    <a href="@Url.Action("List", new { ViewBag.channelTag, ViewBag.columnTag, @tagtype = 1 })" cl class="btn default">取消，返回列表</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>